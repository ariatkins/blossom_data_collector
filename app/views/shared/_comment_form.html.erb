<%= form_for(@cup) do |f| %>
	<% @comment = @cup.comments.new %>
	<%= f.fields_for @comment do |comment_form| %>
		<aside class="textarea">
			<%= comment_form.text_area :content, rows: "3", placeholder: "Write a new comment..." %>
		</aside>
	<% end %>
	<%= f.submit "Save", class: "btn btn-medium btn-primary" %>
<% end %>